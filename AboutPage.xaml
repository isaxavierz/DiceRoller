<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiceRoller.AboutPage"
             Title="AboutPage">
    <VerticalStackLayout>
        <Label 
            Text="Feito por Gustavo Henrique e Isabelly Xavier."
            VerticalOptions="Center" 
            HorizontalOptions="Center" />


        <Button
            x:Name="AboutButtonGustavo"
            Text="Mais sobre o Gustavo!"
            Clicked="AboutButtonGustavo_Clicked"
            WidthRequest="200"/>

        <Button
            x:Name="AboutButtonIsa"
            Text="Mais sobre a Isa!"
            Clicked="AboutButtonIsa_Clicked"
            WidthRequest="200"/>
    </VerticalStackLayout>


</ContentPage>